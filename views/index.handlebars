<!-- search bar -->
<div class="search-bar mb-2">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
  <a class="btn btn-success mt-2" href="/diners/new">Create new</a>
</div>

<!-- restaurant list -->


<div class="row card-mode">

  {{#each diners}}
  <div class="col-sm-3 col-sm-4 mb-2">
    <div class="card h-100">
      <a href="/diners/{{this.id}}" class="text-secondary">
        <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
        <div class="card-body p-3">
          <h6 class="card-title mb-1">{{this.name}}</h6>
          <div class="restaurant-category mb-1">
            <i class="fas fa-utensils pr-2"></i>{{this.category}}
          </div>
          <span class="badge badge-pill badge-danger font-weight-normal">
            {{this.rating}}
            <i class="fas fa-star fa-xs"></i>
          </span>
        </div>
      </a>

      {{!-- edit detail delete --}}
      <div class="card-footer bg-transparent text-right">
        <a href="/diners/{{this.id}}/edit" class="btn btn-light btn-link btn-sm">Edit</a>
        <a href="/diners/{{this.id}}" class="btn btn-light btn-link btn-sm">Detail</a>
        <button type="submit" class="btn btn-secondary btn-sm">Delete</button>
      </div>
    </div>
  </div>
  {{/each}}

</div>